<p id="notice" class="text-center"><%= notice %></p>

<h1>Characters</h1>

<% if @characters.present? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Class</th>
        <th>Level</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @characters.each do |character| %>
        <tr>
          <td><%= character.name %> </td>
          <td><%= character.job %></td>
          <td><%= character.level %></td>

          <td><%= link_to 'View', character %></td>
          <td><%= link_to 'Edit', edit_character_path(character) %></td>
          <td><%= link_to 'Remove', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No characters added</p>
<% end %>

<br>

