<div class="text-center">
  <p>
    <strong>Name:</strong>
    <%= @character.name %> |
    <strong>Race:</strong>
    <%= @character.race %>
  </p>

  <p>
    <strong>Class:</strong>
    <%= @character.job %> |
    <strong>Level:</strong>
    <%= @character.level %>
  </p>

  <p>
    <strong>Str:</strong>
    <%= @character.strength %> |
    Mod:
    <%= @character.strength / 2 - 5 %>
  </p>

  <p>
    <strong>Con:</strong>
    <%= @character.constitution %> |
    Mod:
    <%= @character.constitution / 2 - 5 %>
  </p>

  <p>
    <strong>Dex:</strong>
    <%= @character.dexterity %> |
    Mod:
    <%= @character.dexterity / 2 - 5 %>
  </p>

  <p>
    <strong>Int:</strong>
    <%= @character.intelligence %> |
    Mod:
    <%= @character.intelligence / 2 - 5 %>
  </p>

  <p>
    <strong>Wis:</strong>
    <%= @character.wisdom %> |
    Mod:
    <%= @character.wisdom / 2 - 5 %>
  </p>

  <p>
    <strong>Cha:</strong>
    <%= @character.charisma %> |
    Mod:
    <%= @character.charisma / 2 - 5 %>
  </p>

  <p>
    <strong>Initiative:</strong>
    <%= @character.initiative %>
  </p>

  <p>
    <strong>HP:</strong>
    <%= @character.hit_points %> |
    <strong>AC:</strong>
    <%= @character.armor_class %>
  </p>

  <p>
    <strong>PD:</strong>
    <%= @character.phys_def %> |
    <strong>MD:</strong>
    <%= @character.mental_def %>
  </p>

  <p>
    <strong>Recoveries:</strong>
    <%= @character.recoveries %>
  </p>

  <p>
    <strong>Recovery Dice:</strong>
    <%= @character.recovery_dice %>
  </p>

  <p>
    <strong>One Unique Thing:</strong>
