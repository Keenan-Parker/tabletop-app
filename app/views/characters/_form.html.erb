<%= simple_form_for(character, html: { class: 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :race %>
    <%= f.input :job %>
    <%= f.input :level %>
    <%= f.input :strength %>
    <%= f.input :constitution %>
    <%= f.input :dexterity %>
    <%= f.input :intelligence %>
    <%= f.input :wisdom %>
    <%= f.input :charisma %>
    <%= f.input :armor_class %>
    <%= f.input :phys_def %>
    <%= f.input :mental_def %>
    <%= f.input :hit_points %>
    <%= f.input :recoveries %>
    <%= f.input :recovery_dice %>
    <%= f.input :one_unique_thing %>
    <%= f.input :icons %>
    <%= f.input :backgrounds %>
    <%= f.input :racial %>
    <%= f.input :class_features %>
    <%= f.input :talents %>
    <%= f.input :melee_atk %>
    <%= f.input :ranged_atk %>
    <%= f.input :powers %>
    <%= f.input :feats %>
    <%= f.input :improved_initiative %>
    <%= f.input :equipment %>
    <%= f.input :gold %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
