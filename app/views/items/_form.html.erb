<%= simple_form_for [@character, @item] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :description %>

    <%= f.input :stats %>

    <%= f.input :uses %>

    <%= f.input :gold_value %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
